create table tbl_member(
userid varchar2(50) primary key,
userpw varchar2(50) not null,
username varchar2(50) not null,
email varchar2(100),
regdate date,--�벑濡앸궇吏�
updatedate date--�닔�젙�궇吏�
);
select * from tbl_member;
--�삤�씪�겢 �궇吏� �븿�닔 �솗�씤 , dual �뀒�씠釉붿� �삤�씪�겢 �꽕移섏떆 �꽕移섎릺�뒗 �엫�떆�뀒�씠釉붾줈 �삤�씪�겢 �븿�닔�굹 �뿰�궛 寃⑤줈媛�媛� �솗�씤 �슜�룄

	insert into tbl_member (userid,userpw,username,email,regdate,updatedate)
	values('a','q','q','con',sysdate,sysdate);


select sysdate from dual;
